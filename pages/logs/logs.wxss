@import '/towxml/style/main.wxss';

page {
  background-color: #f6f6f6;
  position: relative;
}
.main-container {
  height: auto;
  /* overflow: hidden;  */

}

/* tabBar */
.tab-wrapper{
  max-width: 100%;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  /* height: 100rpx; */
  
}
.tab-item{
  display: inline-block;
  width: 33.3%;
  font-size: 28rpx;
  text-align: center;
  background: #fff;
  color: #999;
  
  padding: 20rpx 0;
}
.tab-item-active{
  color: #323233;
}
.tab-item-line{
  width: 33.3%;
  position: absolute;
  left: 0;
  bottom: 1rpx;
  border-bottom: 4rpx solid #323233;
}
.tab-content {
  display: none;
  margin-top: 100rpx;
}


.card-container {
  /* height:500rpx; */
  height: 1000rpx;
}

.card-item {
  background-color: #fff;
  margin: 22rpx 15rpx; 
  /* border-radius: 6rpx; */
  padding: 20rpx;
  /* box-shadow: #c7c7c7 0px 0px 5rpx; */
  
}

.card-title {
  font-size: 32rpx;
  margin: 10rpx 0 0 0;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}

.card-content {
  font-size: 28rpx;
  padding: 10rpx 0;
  line-height: 1.6;
  color: #666;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  
}
