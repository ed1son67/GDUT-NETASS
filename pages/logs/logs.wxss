.card-footer {
  display: flex;
  font-size: 26rpx;
  color: #999;
  justify-content: space-between;
  margin: 10rpx 0 0 0;
}

.load-more {
 
  
  text-align: center;
  color: #cdcdcd;
  font-size: 28rpx;
  padding: 20rpx;
}



@keyframes skeleton-loading {
  0% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0 50%;
  }
}
.skeleton-wrapper {
  height: auto;
  display: none;
}
.skeleton-item {
  height: auto;
  margin: 25rpx 15rpx; 
  padding:  20rpx;
  background-color: #fff;
}
.skeleton-item view {
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  animation: skeleton-loading 1.4s ease infinite;
}
.skeleton-title {
  width: 100%;
  height: 65rpx;
  margin: 10rpx 0 25rpx 0;
}
.skeleton-paragraph {
  width: 80%;
  height: 30rpx;
  margin:  10rpx 0;
}
.skeleton-footer {
  background: none !important;
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.skeleton-footer view {
  
  height: 20rpx;
  width: 10%;
  /* margin-left: 20rpx; */
}


.show{
  display: block;
}

.hide{
  display: none;
}