<!--index.wxml-->
<view class="container">
  <view class='header-container'>
    <view class='title-container'>
      <view>网络端口查询</view>
    </view>
  </view>
  <view class='main-container'>
    <view class='form-contaienr'>
      <view class='form-item'>
        <view class='label'>
          楼栋：
        </view>
        <view class='item'>
          <picker 
            value='{{buildingIndex}}'
            range='{{buildingData}}'
            mode="multiSelector"
            bindchange="buildingChange"
            bindcolumnchange="buildingColumnChange"
          >
           {{building}}
          </picker>
        </view>
      </view>
       <view class='form-item'>
        <view class='label'>
          房间号：
        </view>
        <view class='item'>
          <input bindinput='roomChange' placeholder='请输入房间号' placeholder-style='color: #000;'></input>
        </view>
      </view>
       <view class='form-item'>
        <view class='label'>
          床号：
        </view>
        <view class='item'>
          <picker 
            value='{{bedIndex}}'
            range='{{bedData}}'
            bindchange="bedChange"
          >
            {{bed}}
          </picker>
        </view>
      </view>
    </view>
    <view class='button-container'>
      <button bindtap='seachPort'>查询端口</button>
    </view>
  </view>
</view>