/* navBar */
.nav-wrapper{
  max-width: 100%;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  /* height: 100rpx; */
  border-bottom: 1px solid rgba(102, 102, 102, .1);
}
.nav-item {
  display: inline-block;
  width: 33.3%;
  font-size: 32rpx;
  text-align: center;
  background: #fff;
  color: #999;
  padding: 28rpx 0;
}
.nav-item-active {
  color: #2a83ff;
  font-weight: 600;
}
.nav-item-line {
  width: 33.3%;
  position: absolute;
  left: 0;
  bottom: 1rpx;
  height:  8rpx;
  background: #2a83ff;
  border-radius: 10rpx;
}
.tab-content {
  display: none;
  margin-top: 130rpx;
}
.card-item {
  background-color: #fff;
  margin: 20rpx 16rpx;   
  padding: 24rpx;
  border-radius: 10rpx;
  box-shadow: 0 2px 5px 0px rgba(32,33,36,0.10);
}
.card-title {
  font-size: 38rpx;
  margin: 0 0 0 0;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  /* display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; */
  font-weight: 600;
  display: flex;
  align-items: center;
}
.card-content {
  font-size: 32rpx;
  padding: 10rpx 0;
  line-height: 1.6;
  color: #666;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.card-footer {
  display: flex;
  font-size: 26rpx;
  color: #999;
  justify-content: space-between;
  margin: 10rpx 0 0 0;
}
.footer-text {
  display: flex;
  align-items: center;
}
.footer-text image {
  height: 28rpx;
  width: 26rpx;
  margin-right: 8rpx;
}
.timeStamp-container {
  /* background-color: #f1f5f9;
  border-radius: 10rpx; */
}
.load-more {
  text-align: center;
  color: #cdcdcd;
  font-size: 28rpx;
  padding: 20rpx;
  display: none;
}

@keyframes skeleton-loading {
  0% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0 50%;
  }
}
.skeleton-wrapper {
  height: auto;
  display: none;
}
.skeleton-item {
  height: auto;
  margin: 25rpx 15rpx; 
  padding:  20rpx;
  background-color: #fff;
}
.skeleton-item view {
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  animation: skeleton-loading 1.4s ease infinite;
}
.skeleton-title {
  width: 100%;
  height: 65rpx;
  margin: 10rpx 0 25rpx 0;
}
.skeleton-paragraph {
  width: 80%;
  height: 30rpx;
  margin:  10rpx 0;
}
.skeleton-footer {
  background: none !important;
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.skeleton-footer view {
  
  height: 20rpx;
  width: 10%;
  /* margin-left: 20rpx; */
}
.show{
  display: block;
}
.hide{
  display: none;
}
.readTag {
  display: inline-block;
  font-size: 24rpx;
  background: #f3f4f9;
  color: #4166b0;
  padding: 2rpx 14rpx;
  margin-left: 10rpx;
  border-radius: 6rpx;
}