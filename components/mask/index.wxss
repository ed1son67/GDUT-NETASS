/* template/mask/index.wxss */



.mask-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1000;
  transition: all 0.2s ease-in-out;
  opacity: 0;
  visibility: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.mask-main {
  width: 650rpx;
  height: 580rpx;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 8rpx;
  position: relative;
}
.mask-close {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  background-color: #fffdfe;
  position: absolute;
  top: -35rpx;
  right: 25rpx;
  box-shadow: 0 1px 3px 0px rgba(32,33,36,0.28);
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.mask-close image {
  height: 30rpx;
  width: 30rpx;
  margin: 0 auto;
  
}


.showMask {
  visibility: visible;
  opacity: 1;
}